- var bodyClass = '';
- var headerLogo = false;
block vars

doctype
html(class="no-js", lang="en")
  head
    meta(charset='utf-8')
    meta(name='viewport', content='user-scalable=no, width=device-width, initial-scale=1.0, maximum-scale=1.0')
    block title
      title Index

    //- only for development
    link(rel='stylesheet', href='../assets/css/vendors/bootstrap/bootstrap.min.css')
    link(rel='stylesheet', href='../assets/css/site.prefixed.min.css')
    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,700,800')

  body(class='#{bodyClass}')

    .container.header-container
      if headerLogo
        include ../components/modules/header.html
    
    .container.main-container
      block content

    .container.footer-container
      include ../components/modules/footer.html

    include _includes/scripts