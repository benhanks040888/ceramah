script(src='../assets/js/vendors/jquery-1.11.0.min.js')
script(src='../assets/js/vendors/bootstrap.min.js')
script(src='../assets/js/vendors/masonry.pkgd.min.js')
script(src='../assets/js/vendors/jquery.mousewheel.js')
script(src='../assets/js/vendors/jquery.mCustomScrollbar.js')
script(src='../assets/js/vendors/prism.js')
script(src='../assets/js/site.min.js')

script.
  $(function() {
    $('.docs-container').each(function() {
      var $this = $(this);

      var moduleHtml = $.trim($this.find('.module-wrapper').html());

      $this.find('pre > code').text(moduleHtml).html();
    });

    $('.js-show-code').on('click', function(e) {
      e.preventDefault();
      
      var $this = $(this),
          codeContainer = $this.next('.code-container');

      if (codeContainer.hasClass('hide')) {
        $this.text('Hide Code');
      } else {
        $this.text('Show Code');
      }
      codeContainer.toggleClass('hide');
    })
  });

  (function($){
    $(window).load(function(){

      $('.gallery-grid').masonry({
        // options
        itemSelector: '.grid-item',
        columnWidth: 130
      });

      $(".custom-scrollbar").mCustomScrollbar({
        theme:"dark-3"
      });

      $(".custom-scrollbar").css("opacity", 1);
    });
  })(jQuery);


